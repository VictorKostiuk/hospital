!!!
%html
  %head
    %title Hospital
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_importmap_tags
  %body
    %nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        = link_to 'Hospital', root_path, class: "navbar-brand"
        %button.navbar-toggler{"aria-controls" => "navbarNavAltMarkup", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-bs-target" => "#navbarNavAltMarkup", "data-bs-toggle" => "collapse", :type => "button"}
          %span.navbar-toggler-icon
        #navbarNavAltMarkup.collapse.navbar-collapse
          .navbar-nav
            = link_to 'Home', root_path, class: "nav-link"
            = link_to 'Appointments', appointments_path, class: "nav-link"
            - if doctor_signed_in?
              = link_to 'Patients', patients_path, class: "nav-link"
          .navbar-nav
            - if patient_signed_in?
              = current_patient.first_name
              = button_to 'Log out', destroy_patient_session_path, method: :delete, class: 'btn btn-dark'
            - elsif nurse_signed_in?
              = current_nurse.first_name
              = button_to 'Log out', destroy_nurse_session_path, method: :delete, class: 'btn btn-dark'
            - elsif doctor_signed_in?
              = current_doctor.first_name
              = button_to 'Log out', destroy_doctor_session_path, method: :delete, class: 'btn btn-dark'
            - else
              = link_to 'New Patient', new_patient_registration_path, class: "nav-link"
              = link_to 'New Doctor', new_doctor_registration_path, class: "nav-link"
              = link_to 'New Nurse', new_nurse_registration_path, class: "nav-link"
    %p.notice= notice
    %p.alert= alert
    .container
      = yield
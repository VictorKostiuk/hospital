- if patient_signed_in? || doctor_signed_in?
  - if patient_signed_in?
    = current_patient.first_name
    = button_to 'Log out', destroy_patient_session_path, method: :delete, class: 'btn btn-dark'
  - else

    = button_to 'Log out', destroy_doctor_session_path, method: :delete, class: 'btn btn-dark'
- else
  = link_to 'New Patient', new_patient_registration_path, class: 'btn btn-dark'
  = link_to 'New Doctor', new_doctor_registration_path, class: 'btn btn-dark'
  = link_to 'New Nurse', new_nurse_registration_path, class: 'btn btn-dark'
